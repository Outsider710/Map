<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
            android:title="Synchronization"
            android:icon="@drawable/baseline_sync_24"
            android:key="@string/sync_key"
            android:summary="Last Synchronization: 1997/04/15 10:10:10"/>
    <EditTextPreference
            android:icon="@drawable/baseline_lock_open_24"
            android:title="Your API"
            android:key="@string/API_KEY_MAPBOX"
            android:summary="Please provide your API"/>
    <ListPreference
            android:icon="@drawable/baseline_calendar_today_24"
            android:title="Window Time"
            android:summary="Select window time."
            android:key="@string/timeWindow_key"
            android:defaultValue="false"
            android:entries="@array/listPreference"
            android:entryValues="@array/listValues"/>
</PreferenceScreen>